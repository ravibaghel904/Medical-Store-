<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#ECECEC"
    tools:showIn="@layout/app_bar_main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/medicine_logo"
                    android:layout_weight="1"
                    android:contentDescription="TODO"

                    android:gravity="center" />

                <TextView

                    android:layout_width="192dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Medicines"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="146dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Offers of the day!"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/twntypercentbuttion"
                    android:onClick="twenty"
                    android:text="20%  OFF"
                    android:textSize="50sp"
                    />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:onClick="ten"
                    android:background="@drawable/offbutton"
                    android:text="10% OFF"
                    android:textSize="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:onClick="appointment"
                    android:text="Appointment"
                    />

                <Button
                    android:id="@+id/outline_buttomnn"
                    android:layout_width="match_parent"
                    android:textAllCaps="false"
                    android:onClick="booktestlab"
                    android:layout_height="wrap_content"
                    android:text="Book Lab Test"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:text="Shop by category!"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/launc"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:layout_marginRight="15dp"
                    android:onClick="listallmedicine"
                    android:background="@drawable/baby"
                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/outline_button"
                    android:layout_width="113dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/mens"
                    android:onClick="mens"
                    android:padding="20dp" />

                <Button
                    android:id="@+id/buon_h"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:onClick="drinks"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:background="@drawable/drinks" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/laudnc"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:onClick="shampoo"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shampoo"

                    />

                <Button
                    android:id="@+id/utton_h"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:layout_marginRight="15dp"
                    android:onClick="sexuall"
                    android:layout_weight="1"
                    android:background="@drawable/sexuallwellness" />

                <Button
                    android:id="@+id/buttcon_h"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:layout_marginRight="15dp"
                    android:onClick="oralcare"

                    android:layout_weight="1"
                    android:background="@drawable/oralcare" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ltaunc"
                    android:layout_marginRight="15dp"
                    android:onClick="kidney"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/kidneycare"

                    />

                <Button
                    android:id="@+id/bun_h"

                    android:onClick="eyecare"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/eyeandear" />

                <Button
                    android:id="@+id/bututon_h"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:layout_marginRight="15dp"
                    android:onClick="skin"

                    android:layout_weight="1"
                    android:background="@drawable/skain" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/lanunc"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:onClick="treatment"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/treatment"

                    />

                <Button
                    android:id="@+id/n_h"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:layout_marginRight="15dp"
                    android:onClick="diabetes"
                    android:layout_weight="1"
                    android:background="@drawable/diabetes" />

                <Button
                    android:id="@+id/buttbon_h"
                    android:layout_marginRight="15dp"
                    android:onClick="fitness"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/fitness" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/aunc"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:layout_marginRight="15dp"
                    android:onClick="heart"
                    android:layout_weight="1"
                    android:background="@drawable/heart"

                    />

                <Button
                    android:id="@+id/buton_h"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:padding="20dp"
                    android:onClick="liver"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/liver" />

                <Button
                    android:id="@+id/button_0"

                    android:onClick="hair"
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="15dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/hair" />
            </LinearLayout>

        </LinearLayout>



    </ScrollView>


    <fragment
        android:id="@+id/nav_host_fragment_content_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

</RelativeLayout>