<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book_testLab">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:background="@drawable/test_body"
                    android:textSize="20sp"
                    android:onClick="checkup"
                    android:textAllCaps="false"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Full Body Checkup"

                    />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:onClick="liver"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:text="Liver"
                    android:background="@drawable/test_body"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:onClick="hepatitis"
                    android:textAllCaps="false"
                    android:text="Hepatitis Screen"
                    android:background="@drawable/test_body"
                    android:textSize="20sp"
                    />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:onClick="antibody"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:text="Antibody Test"
                    android:background="@drawable/test_body"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:onClick="diabetes"
                    android:textAllCaps="false"
                    android:text="Diabetes"
                    android:background="@drawable/test_body"
                    android:textSize="20sp"
                    />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:onClick="pregnancy"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:text="Pregnancy"
                    android:background="@drawable/test_body"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:onClick="thyroid"
                    android:textAllCaps="false"
                    android:text="Thyroid"
                    android:background="@drawable/test_body"
                    android:textSize="20sp"
                    />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:onClick="healthy"
                    android:textAllCaps="false"
                    android:text="Healthy Heart"
                    android:background="@drawable/test_body"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:onClick="Kidney"
                    android:textAllCaps="false"
                    android:text="Kidney"
                    android:background="@drawable/test_body"
                    android:textSize="20sp"
                    />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:onClick="vitamin"
                    android:textAllCaps="false"
                    android:text="Vitamin Test"
                    android:background="@drawable/test_body"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>